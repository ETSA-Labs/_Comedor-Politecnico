<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_backcomedor"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_sms_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Messages"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_notifications_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Notifications"
            android:layout_marginStart="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_buttons"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_about_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="About"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />

        <com.google.android.material.button.MaterialButton
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_suppor_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Support"
            android:layout_marginStart="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_buttons"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/location_button"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:text="Location"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_map_24dp"
            app:iconGravity="textStart"
            app:iconPadding="24dp"
            app:iconSize="36dp"
            app:iconTint="@android:color/black" />
    </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SIMULARNOTIS.SimulacionNotificacionesActivity">

    <Button
        android:id="@+id/btnSimulateReservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simular Reserva Exitosa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="simulateReservationSuccessNotification"/>

    <Button
        android:id="@+id/btnSimulatePayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simular Pago Realizado"
        app:layout_constraintTop_toBottomOf="@id/btnSimulateReservation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="simulatePaymentConfirmationNotification"/>

    <Button
        android:id="@+id/btnSimulatePickupReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simular Recordatorio de Retiro"
        app:layout_constraintTop_toBottomOf="@id/btnSimulatePayment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="simulatePickupReminderNotification"/>

</androidx.constraintlayout.widget.ConstraintLayout>

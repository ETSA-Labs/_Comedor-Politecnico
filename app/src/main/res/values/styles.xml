<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/statusBar</item>
        <item name="android:windowBackground">@color/window</item>
        <item name="android:navigationBarColor">@color/navigationBar</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textViewStyle">@style/TextView</item>
        <item name="materialButtonStyle">@style/MaterialButton</item>
    </style>

    <!--TextView styles-->
    <style name="TextView" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/fore.high</item>
    </style>

    <style name="HeaderTextView" parent="@style/TextView">
        <item name="android:textFontWeight">500</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TitleTextView" parent="@style/TextView">
        <item name="android:textFontWeight">600</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyLargeTextView" parent="@style/TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BodySmallTextView" parent="@style/TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BodyStrongTextView" parent="@style/TextView">
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BodyTextView" parent="@style/TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <!--Button styles...-->
    <style name="MaterialButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/back.button</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/fore.high</item>
        <item name="iconTint">@color/fore.high</item>
    </style>

    <style name="IconButton" parent="@style/MaterialButton">
        <item name="android:backgroundTint">@null</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="iconSize">24dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="CardOptionButton" parent="@style/MaterialButton">
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@null</item>
        <item name="iconPadding">12dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="SettingOptionButton" parent="@style/MaterialButton">
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="iconSize">24dp</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="LogoutButton" parent="@style/MaterialButton">
        <item name="android:backgroundTint">@null</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:text">@string/button.logout</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/accent</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">14dp</item>s
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="MicrosoftButton" parent="@style/MaterialButton">
        <item name="android:minHeight">52dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/fore.medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">@string/button.microsoft</item>
        <item name="icon">@drawable/im_microsoft</item>
        <item name="iconSize">20dp</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">16dp</item>
        <item name="cornerRadius">28dp</item>
        <item name="strokeColor">@color/stroke.button</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_backcomedor"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/top_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_messages"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_sms_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Messages"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_privacy_policy"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_user_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Política de privacidad"
            android:layout_marginStart="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/middle_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_buttons"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_about"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_about_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="About"
            android:layout_marginEnd="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_support"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_support_24dp"
            app:iconGravity="textTop"
            app:iconSize="36dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Support"
            android:layout_marginStart="10dp"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle_buttons"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_user_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_i_24dp"
            app:iconGravity="textStart"
            app:iconSize="36dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Guía de uso"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_terms_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            app:iconTint="@android:color/black"
            app:icon="@drawable/ic_terms_24dp"
            app:iconGravity="textStart"
            app:iconSize="36dp"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            app:iconPadding="24dp"
            android:textColor="@android:color/black"
            android:text="Términos y condiciones"
            app:cornerRadius="20dp"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#ffff2c2c"
            android:text="Cerrar Sesión"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:textAllCaps="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_admin_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cornerRadius="12dp"
            android:text="Admin panel"/>
   </LinearLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="571dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="57dp"
        android:layout_marginBottom="103dp" />

    <LinearLayout
        android:id="@+id/navigationOver"
        android:layout_width="476dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="-4dp"
        android:background="#CCFFFFFF"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/directionText"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_gravity="center_horizontal"
            android:text="Comedor Politecnico"
            android:textColor="#000000"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigationOverlay"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="59dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/nextStepTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DespuÃ©s, gira a la izquierda"
            android:textColor="#FFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/navigationBottom"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="670dp"
            android:layout_marginBottom="-10dp"
            android:background="#CCFFFFFF"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 min"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/distanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="500 m"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="282dp"
                android:layout_height="61dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:id="@+id/driveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_drive_24dp" />

                <Button
                    android:id="@+id/walkButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawableTop="@drawable/ic_walk_24dp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
